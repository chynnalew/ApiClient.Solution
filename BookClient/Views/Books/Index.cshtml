@{
  Layout = "_Layout";
}

@using BookClient.Models

<h1>Add a Book:</h1>
<form action="/books" method="post">
  <label for="title">Title</label>
  <input id="title" name="title" type="text" class="form-control" required>
  <br>
  <label for="author">Author</label>
  <input id="author" name="author" type="text" class="form-control" required>
  <br>
  <label for="genre">Genre</label>
  <input id="genre" name="genre" type="text" class="form-control" required>
  <br>
  <label for="rating">Rating</label>
  <input id="rating" name="rating" type="number" min="1" max="10" class="form-control" required>
  <br>
  <label for="read">Check this box if you have read this book: </label>
  <input id="read" name="read" type="checkbox">
  <br>
  <button type="submit" class="btn btn-secondary btn-lg btn-block">Submit!</button>
</form>

<h2>All Books</h2>
<ul>
@foreach (Book book in Model)
{
      <p><em>@book.Title</em></p>
    <ul>
        <li>Author: @book.Author</li>
        <li>Genre: @book.Genre</li>
        <li>Rating: @book.Rating/10</li>
        @if(book.Read == true){
          <li>TBR: Read!</li>
        } else {
          <li>TBR: Not Read</li>
        }
    </ul>
    <a href="/books/Details/@book.BookId">View Details</a>
    <br>
}
</ul>